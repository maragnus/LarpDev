@inject NavigationManager NavigationManager
@page "/profile"

@code {
    private void Logout() => NavigationManager.NavigateTo("/logout");
}

<PageHeader>Your Profile</PageHeader>

<MudContainer MaxWidth="MaxWidth.Small" Class="pt-8">

    <ProfileEditorComponent/>

    <EmailsEditorComponent/>

    <MudPaper Class="pa-2 mb-2">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Logout" Color="Color.Warning" OnClick="Logout">Logout</MudButton>
    </MudPaper>

</MudContainer>