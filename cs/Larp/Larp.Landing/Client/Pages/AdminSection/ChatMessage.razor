<MudStack Row>
    @if (Response)
    {
        <MudAvatar Style=" background-color: #AB68FF" Size="Size.Small">
            <MudImage Src="/openai-w.svg" Alt="OpenAI Logo"/>
        </MudAvatar>
    }
    else
    {
        <MudAvatar Color="Color.Primary" Size="Size.Small">
            <MudIcon Icon="@Icons.Material.Filled.Person" />
        </MudAvatar>
    } 
    <MudStack Spacing="2">
        <MudText Typo="Typo.caption">@Author</MudText>
        <MudText Typo="Typo.body2" Class="paragraphs">
            @_content
        </MudText>
    </MudStack>
</MudStack>

@code {
    private MarkupString _content;

    [Parameter]
    public bool Response { get; set; }

    [Parameter] public string Author { get; set; } = default!;

    [Parameter] public string Text { get; set; } = default!;

    protected override void OnParametersSet()
    {
        _content = new MarkupString(Markdig.Markdown.ToHtml(Text));
    }

}