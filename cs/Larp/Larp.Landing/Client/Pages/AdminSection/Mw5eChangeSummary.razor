@using System.Text.Json
@using System.Text.Json.Nodes
<MudPaper>
    @foreach (var (fieldName, value) in Character.ChangeSummary!)
    {
        var oldValue = (JsonElement)value.Old;
        var newValue = (JsonElement)value.New;
        <MudStack Row>
            <MudText Typo="Typo.body1"><strong>@fieldName</strong></MudText>
            <MudStack Spacing="0">
                <MudStack Row>
                    <MudText Typo="@Typo.body1">Old: </MudText>
                    <MudText Typo="@Typo.body2">@oldValue</MudText>
                </MudStack>

                <MudStack Row>
                    <MudText Typo="@Typo.body1">New: </MudText>
                    <MudText Typo="@Typo.body2">@newValue</MudText>
                </MudStack>
            </MudStack>
        </MudStack>
    }
</MudPaper>

@code {

    [Parameter]
    public Character Character { get; set; } = null!;

}