@page "/events/past"
@inject LandingService LandingService

<PageHeader Container>Past Events</PageHeader>

<MudContainer MaxWidth="MaxWidth.Large" Class="relative pt-4">
    <MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
        <MudText Typo="Typo.h6" Class="mt-4 mb-4">Past Events</MudText>
        <MudButton Href="/events" Variant="Variant.Filled" Color="Color.Primary">Go To Upcoming Events</MudButton>
        @if (LandingService.IsInRole(AccountRole.AdminAccess))
        {
            <MudButton Href="/admin/events" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.AdminPanelSettings" Color="Color.Secondary">Administration</MudButton>
        }
    </MudStack>
    <EventListComponent Past/>
</MudContainer>