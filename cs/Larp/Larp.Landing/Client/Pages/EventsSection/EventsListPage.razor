@page "/events"
@inject LandingService LandingService

<PageHeader Container>Upcoming Events</PageHeader>

<MudContainer MaxWidth="MaxWidth.Small" Class="relative pt-4">
    <MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
        <MudText Typo="Typo.h6" Class="mt-4 mb-4">Upcoming Events</MudText>
        <MudButton Href="/events/past" Variant="Variant.Filled" Color="Color.Primary">Go To Past Events</MudButton>
        @if (LandingService.IsInRole(AccountRole.AdminAccess))
        {
            <MudButton Href="/admin/events" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.AdminPanelSettings" Color="Color.Secondary">Administration</MudButton>
        }
    </MudStack>
    <EventListComponent/>
</MudContainer>